{
  "name": "tape",
  "private": true,
  "scripts": {
    "start": "yarn wsrun dev",
    "lint": "yarn wsrun lint",
    "lint-fix": "yarn wsrun lint-fix",
    "test": "yarn wsrun test"
  },
  "workspaces": [
    "backend",
    "frontend"
